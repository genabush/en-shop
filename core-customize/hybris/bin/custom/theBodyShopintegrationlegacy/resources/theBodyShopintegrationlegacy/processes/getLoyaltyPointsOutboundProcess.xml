<?xml version="1.0" encoding="utf-8"?>
<process xmlns="http://www.hybris.de/xsd/processdefinition" start="createGetLoyaltyPointsRequest" name="getLoyaltyPointsOutboundProcess" processClass="uk.co.thebodyshop.integration.model.process.GetLoyaltyPointsOutboundProcessModel">
	<action id="createGetLoyaltyPointsRequest" bean="createGetLoyaltyPointsRequestAction">
		<transition name="NOK" to="error" />
		<transition name="WAIT" to="waitForWebserviceResponse" />
	</action>

	<wait id="waitForWebserviceResponse" then="checkWebserviceResponse" prependProcessCode="false">
		<event>${process.code}_wsResponse</event>
	</wait>

	<action id="checkWebserviceResponse" bean="checkWebserviceResponseAction">
		<transition name="OK" to="success" />
		<transition name="NOK" to="waitForResend" />
		<transition name="RETRY" to="retryWebservice" />
	</action>

	<action id="retryWebservice" bean="retryWebserviceAction">
		<transition name="OK" to="createGetLoyaltyPointsRequest" />
		<transition name="NOK" to="waitForResend" />
	</action>

	<wait id="waitForResend" then="processResend" prependProcessCode="false">
		<event>${process.code}_wsResend</event>
	</wait>

	<action id="processResend" bean="processResendAction">
		<transition name="FAIL" to="getLoyaltyPointsWSFailureAction" />
		<transition name="RETRY" to="createGetLoyaltyPointsRequest" />
	</action>

	<action id="getLoyaltyPointsWSFailureAction" bean="getLoyaltyPointsWSFailureAction">
		<transition name="OK" to="failed" />
	</action>

	<end id="error" state="ERROR">All went wrong.</end>
	<end id="failed" state="FAILED">Request failed.</end>
	<end id="success" state="SUCCEEDED">Request succeeded.</end>
</process>
